<!--        android:max="100"-->
<!--        android:progress="0"-->
<!--        android:progressDrawable="@drawable/shape_webview_h5_progress_bar" />-->
    <com.example.mylibrary.RadiusCutLayout
        android:id="@+id/radius"
        android:background="@color/white"
        app:clip_background="true"
        app:round_corner_top_left="10dp"
        app:round_corner_top_right="10dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </com.example.mylibrary.RadiusCutLayout>
    <com.example.mylibrary.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />



</RelativeLayout>